<%= paginator.render do %>
  <nav class="pagination-wrapper">
    <div class="pagination-custom">
      <!-- ナビゲーションボタン（SPで1段目） -->
      <div class="pagination-nav">
        <%= first_page_tag %>
        <%= prev_page_tag %>
      </div>

      <!-- ページ番号（SPで2段目） -->
      <div class="pagination-pages">
        <% each_page do |page| %>
          <% if page.display_tag? %>
            <%= page_tag page %>
          <% elsif !page.was_truncated? %>
            <%= gap_tag %>
          <% end %>
        <% end %>
      </div>

      <!-- 次へ、最後（SPで1段目の右側） -->
      <div class="pagination-nav">
        <%= next_page_tag %>
        <%= last_page_tag %>
      </div>
    </div>
  </nav>
<% end %>
