<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">プロフィール</h4>
        <%= link_to "編集", edit_profile_path, class: "btn btn-outline-primary btn-sm" %>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <strong class="text-muted">ユーザーID</strong>
          <p class="h4 text-primary"><%= @user.user_id %></p>
          <small class="text-muted">ログイン時に使用します</small>
        </div>
        
        <div class="mb-3">
          <strong class="text-muted">名前</strong>
          <p class="h5"><%= @user.name %></p>
        </div>

        <div class="mb-3">
          <strong class="text-muted">メールアドレス</strong>
          <p class="h6"><%= @user.email %></p>
        </div>

        <div class="mb-3">
          <strong class="text-muted">登録日</strong>
          <p><%= @user.created_at.strftime("%Y年%m月%d日") %></p>
        </div>

        <% unless @user.medical_staff? || @user.system_admin? %>
          <hr>

          <div class="row text-center">
            <div class="col-4">
              <h5 class="text-primary"><%= @user.blood_pressure_records.count %></h5>
              <small class="text-muted">総記録数</small>
            </div>
            <div class="col-4">
              <h5 class="text-success"><%= @user.blood_pressure_records.this_month.count %></h5>
              <small class="text-muted">今月の記録</small>
            </div>
            <div class="col-4">
              <% if @user.blood_pressure_records.any? %>
                <h5 class="text-info"><%= time_ago_in_words(@user.blood_pressure_records.recent.first.measured_at) %>前</h5>
                <small class="text-muted">最後の記録</small>
              <% else %>
                <h5 class="text-muted">-</h5>
                <small class="text-muted">記録なし</small>
              <% end %>
            </div>
          </div>

          <div class="mt-4 d-grid gap-2">
            <%= link_to "血圧記録を確認", blood_pressure_records_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
