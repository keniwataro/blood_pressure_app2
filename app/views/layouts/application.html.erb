<!DOCTYPE html>
<html>
  <head>
    <title>血圧管理アプリ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
  </head>

  <body>
    <!-- ナビゲーションバー -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <%= link_to "血圧管理アプリ", root_path, class: "navbar-brand" %>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "血圧記録", blood_pressure_records_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "新しい記録", new_blood_pressure_record_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "グラフ", charts_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "病院一覧", hospitals_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
          
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= current_user.name || current_user.email %>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "プロフィール", profile_path, class: "dropdown-item" %></li>
                  <li><%= link_to "設定", edit_user_registration_path, class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, data: { "turbo-method": :delete }, class: "dropdown-item" %></li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "サインアップ", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- フラッシュメッセージ -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <!-- メインコンテンツ -->
    <main class="container mt-4">
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer class="bg-light mt-5 py-3">
      <div class="container text-center">
        <p class="mb-0">&copy; 2025 血圧管理アプリ. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
