<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">血圧記録詳細</h4>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <strong class="text-muted">測定日時</strong>
              <p class="h5"><%= @blood_pressure_record.measured_at.strftime("%Y年%m月%d日 %H:%M") %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <strong class="text-muted">血圧分類</strong>
              <p>
                <span class="badge bg-<%= case @blood_pressure_record.blood_pressure_category
                                          when '正常血圧' then 'success'
                                          when '正常高値血圧' then 'info'
                                          when '軽症高血圧（Ⅰ度）' then 'warning'
                                          else 'danger'
                                          end %> fs-6">
                  <%= @blood_pressure_record.blood_pressure_category %>
                </span>
              </p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="text-center p-3 border rounded">
              <strong class="text-muted d-block mb-2">最高血圧</strong>
              <h2 class="<%= @blood_pressure_record.systolic_pressure >= 140 ? 'blood-pressure-high' : 'blood-pressure-normal' %>">
                <%= @blood_pressure_record.systolic_pressure %>
              </h2>
              <small class="text-muted">mmHg</small>
            </div>
          </div>
          <div class="col-md-4">
            <div class="text-center p-3 border rounded">
              <strong class="text-muted d-block mb-2">最低血圧</strong>
              <h2 class="<%= @blood_pressure_record.diastolic_pressure >= 90 ? 'blood-pressure-high' : 'blood-pressure-normal' %>">
                <%= @blood_pressure_record.diastolic_pressure %>
              </h2>
              <small class="text-muted">mmHg</small>
            </div>
          </div>
          <div class="col-md-4">
            <div class="text-center p-3 border rounded">
              <strong class="text-muted d-block mb-2">脈拍数</strong>
              <h2 class="text-primary">
                <%= @blood_pressure_record.pulse_rate %>
              </h2>
              <small class="text-muted">bpm</small>
            </div>
          </div>
        </div>

        <% if @blood_pressure_record.memo.present? %>
          <div class="mt-4">
            <strong class="text-muted">メモ</strong>
            <div class="mt-2 p-3 bg-light rounded">
              <%= simple_format(@blood_pressure_record.memo) %>
            </div>
          </div>
        <% end %>

        <div class="mt-4">
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to "← 一覧に戻る", blood_pressure_records_path, class: "btn btn-secondary" %>
            <div class="d-flex gap-2">
              <%= link_to "編集", edit_blood_pressure_record_path(@blood_pressure_record), class: "btn btn-primary" %>
              <%= button_to "削除", @blood_pressure_record, 
                          method: :delete,
                          form: { data: { turbo_confirm: "本当に削除しますか？" } },
                          class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
