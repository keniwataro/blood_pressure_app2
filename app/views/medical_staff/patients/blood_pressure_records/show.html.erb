<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="mb-4">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h2">血圧記録詳細</h1>
        <%= link_to "戻る", medical_staff_patient_path(@patient), class: "btn btn-secondary" %>
      </div>
    </div>

    <!-- 患者情報 -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">患者情報</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <strong>患者名:</strong> <%= @patient.name %>
          </div>
          <div class="col-md-6">
            <strong>ユーザーID:</strong> <%= @patient.user_id %>
          </div>
        </div>
      </div>
    </div>

    <!-- 血圧記録詳細 -->
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">血圧記録</h5>
        <%= link_to "編集", edit_blood_pressure_record_path(@blood_pressure_record), class: "btn btn-warning btn-sm" %>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <strong class="text-muted">測定日時</strong>
              <p class="h5"><%= l @blood_pressure_record.measured_at, format: :long %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <strong class="text-muted">登録日時</strong>
              <p><%= l @blood_pressure_record.created_at, format: :long %></p>
            </div>
          </div>
        </div>

        <hr>

        <div class="row text-center mb-4">
          <div class="col-4">
            <div class="mb-3">
              <strong class="text-danger">最高血圧</strong>
              <h3 class="<%= @blood_pressure_record.systolic_pressure_category %>">
                <%= @blood_pressure_record.systolic_pressure %> mmHg
              </h3>
            </div>
          </div>
          <div class="col-4">
            <div class="mb-3">
              <strong class="text-warning">最低血圧</strong>
              <h3 class="<%= @blood_pressure_record.diastolic_pressure_category %>">
                <%= @blood_pressure_record.diastolic_pressure %> mmHg
              </h3>
            </div>
          </div>
          <div class="col-4">
            <div class="mb-3">
              <strong class="text-info">脈拍</strong>
              <h3><%= @blood_pressure_record.pulse_rate %> bpm</h3>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="mb-3">
              <strong class="text-muted">血圧分類</strong>
              <p class="h5">
                <span class="badge <%= @blood_pressure_record.blood_pressure_category_badge_class %>">
                  <%= @blood_pressure_record.blood_pressure_category %>
                </span>
              </p>
            </div>
          </div>
        </div>

        <% if @blood_pressure_record.memo.present? %>
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <strong class="text-muted">メモ</strong>
                <p class="border rounded p-3 bg-light"><%= simple_format @blood_pressure_record.memo %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if @blood_pressure_record.updated_at != @blood_pressure_record.created_at %>
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <strong class="text-muted">最終更新日時</strong>
                <p><%= l @blood_pressure_record.updated_at, format: :long %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
