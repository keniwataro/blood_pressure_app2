<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="h2">ユーザー詳細</h1>
    <%= button_to "削除", admin_user_path(@user),
                  method: :delete,
                  class: "btn btn-outline-danger",
                  form: { data: { turbo_confirm: "#{@user.name} を削除してもよろしいですか？\n\nこの操作は取り消せません。\n・ユーザーの全ての情報が削除されます" } } %>
  </div>
</div>

<!-- ユーザー情報カード -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h4 class="mb-0">基本情報</h4>
    <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-warning btn-sm" %>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">ユーザーID</dt>
      <dd class="col-sm-9"><%= @user.user_id %></dd>

      <dt class="col-sm-3">名前</dt>
      <dd class="col-sm-9"><%= @user.name %></dd>

      <dt class="col-sm-3">メールアドレス</dt>
      <dd class="col-sm-9"><%= @user.email %></dd>

      <dt class="col-sm-3">現在の役割</dt>
      <dd class="col-sm-9">
        <% if @user.current_role %>
          <span class="badge bg-primary"><%= @user.current_role.name %></span>
        <% else %>
          <span class="text-muted">未設定</span>
        <% end %>
      </dd>

      <dt class="col-sm-3">登録日</dt>
      <dd class="col-sm-9"><%= l(@user.created_at, format: :long) %></dd>
    </dl>
  </div>
</div>

<!-- 役割情報 -->
<div class="card mb-4">
  <div class="card-header">
    <h4 class="mb-0">役割情報</h4>
  </div>
  <div class="card-body">
    <% if @user_roles.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>病院</th>
              <th>役割</th>
              <th>権限レベル</th>
            </tr>
          </thead>
          <tbody>
            <% @user_roles.each do |user_role| %>
              <tr>
                <td><%= user_role.hospital.name %></td>
                <td><span class="badge bg-success"><%= user_role.role_name %></span></td>
                <td>
                  <% if user_role.role.is_medical_staff? %>
                    <span class="badge <%= user_role.permission_level_administrator? ? 'bg-danger' : 'bg-secondary' %>">
                      <%= user_role.permission_level_administrator? ? '管理者' : '一般' %>
                    </span>
                  <% else %>
                    <span class="badge bg-info">患者</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">役割が割り当てられていません。</p>
    <% end %>
  </div>
</div>

<!-- 登録病院 -->
<div class="card">
  <div class="card-header">
    <h4 class="mb-0">登録病院</h4>
  </div>
  <div class="card-body">
    <% if @hospitals.any? %>
      <ul class="list-group">
        <% @hospitals.each do |hospital| %>
          <li class="list-group-item">
            <strong><%= hospital.name %></strong>
            <br>
            <small class="text-muted"><%= hospital.address %></small>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">病院に登録されていません。</p>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "一覧に戻る", admin_users_path, class: "btn btn-secondary" %>
</div>
