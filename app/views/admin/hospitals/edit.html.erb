<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">病院情報の編集</h4>
      </div>
      <div class="card-body">
        <%= form_with model: @hospital, url: confirm_edit_admin_hospital_path(@hospital), method: :post, data: { turbo: false } do |f| %>
          <% if @hospital.errors.any? %>
            <div class="alert alert-danger">
              <h6>エラーが発生しました:</h6>
              <ul class="mb-0">
                <% @hospital.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "病院名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :address, "住所", class: "form-label" %>
            <%= f.text_area :address, class: "form-control", rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :phone_number, "電話番号", class: "form-label" %>
            <%= f.text_field :phone_number, class: "form-control" %>
            <div class="form-text">任意項目です</div>
          </div>

          <div class="mb-3">
            <%= f.label :website, "ウェブサイト", class: "form-label" %>
            <%= f.url_field :website, class: "form-control" %>
            <div class="form-text">任意項目です</div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-between">
            <div>
              <%= link_to "詳細に戻る", admin_hospital_path(@hospital), class: "btn btn-secondary" %>
            </div>
            <div>
              <%= link_to "キャンセル", admin_hospital_path(@hospital), class: "btn btn-outline-secondary" %>
              <%= f.submit "確認画面へ", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
