<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">新しい病院の登録</h4>
      </div>
      <div class="card-body">
        <%= form_with model: @hospital, url: confirm_new_admin_hospitals_path, data: { turbo: false } do |f| %>
          <% if @hospital.errors.any? %>
            <div class="alert alert-danger">
              <h6>エラーが発生しました:</h6>
              <ul class="mb-0">
                <% @hospital.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "病院名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "例: ○○内科クリニック" %>
          </div>

          <div class="mb-3">
            <%= f.label :address, "住所", class: "form-label" %>
            <%= f.text_area :address, class: "form-control", rows: 3, placeholder: "例: 東京都渋谷区..." %>
          </div>

          <div class="mb-3">
            <%= f.label :phone_number, "電話番号", class: "form-label" %>
            <%= f.text_field :phone_number, class: "form-control", placeholder: "例: 03-1234-5678" %>
            <div class="form-text">任意項目です</div>
          </div>

          <div class="mb-3">
            <%= f.label :website, "ウェブサイト", class: "form-label" %>
            <%= f.url_field :website, class: "form-control", placeholder: "例: https://example.com" %>
            <div class="form-text">任意項目です</div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "キャンセル", admin_hospitals_path, class: "btn btn-secondary" %>
            <%= f.submit "確認画面へ", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
